@{
  ViewBag.Title = "Teachers";
}
@model List<CourseManager.UI.Models.TeacherModel>
<h2>@CourseManager.UI.Resources.Teacher_List_Header</h2>
@Html.ActionLink(CourseManager.UI.Resources.Teacher_Add_Action_Text, "Add")
<table id="teachers-table">
  <thead>
    <tr>
      <th>
      </th>
      <th>
        @CourseManager.UI.Resources.Teacher_FirstName_Label
      </th>
      <th>
        @CourseManager.UI.Resources.Teacher_LastName_Label
      </th>
      <th>
        @CourseManager.UI.Resources.Teacher_PhoneNumber_Label
      </th>
      <th>
        @CourseManager.UI.Resources.Teacher_PhoneNumber_Label
      </th>
      <th>
        @CourseManager.UI.Resources.Teacher_Department_Label
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var teacher in Model)
    {
      <tr>
        <td>
          @Html.ActionLink(CourseManager.UI.Resources.Global_View_Action_Text, "Details", new { id = teacher.ID })
          |
          @Html.ActionLink(CourseManager.UI.Resources.Global_Update_Action_text, "Update", new { id = teacher.ID })
          |
          @Html.ActionLink(CourseManager.UI.Resources.Global_Delete_Action_Text, "Delete", new { id = teacher.ID })
        </td>
        <td>
          @teacher.FirstName
        </td>
        <td>
          @teacher.LastName
        </td>
        <td>
          @teacher.Email
        </td>
        <td>
          @teacher.SchoolPhone
        </td>
        <td>
          @teacher.Department
        </td>
      </tr>
    }
  </tbody>
</table>
